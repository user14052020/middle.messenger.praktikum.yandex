{
    "ts-node": {
        "files": true
    },
    "compilerOptions": {
        "outDir": "dist",
        "target": "es2016",
        "declaration": false,
        "module": "commonjs",
        "strictNullChecks": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
          "~src/*": ["src/*"],
            "~*": ["./src/*"]
        }
   }
} 