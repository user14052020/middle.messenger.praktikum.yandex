<div class="person">
  <div class="box">
    <div class="image">
      <svg height="47" viewbox="0 0 47 47" width="47" xmlns="http://www.w3.org/2000/svg">
      <circle cx="23.5" cy="23.5" fill="#EFEFEF" r="23.5"></circle></svg>
    </div>
  </div>
  <div class="information">
    <div class="content">
      <div class="username">
        {{personName}}
      </div>
      <div class="message">
        <strong>Вы:</strong> {{messageText}}
      </div>
    </div>
  </div>
  <div class="notice">
    <div class="data">
      <time class="time">
        {{messageDate}}
      </time>
    </div>
    <div class="point">
      {{unreadedMessageAmount}}
    </div>
  </div>
</div>